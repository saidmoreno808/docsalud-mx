# ============================================================
# DocSalud MX — Variables de Entorno
# Copiar a .env y llenar valores reales
# ============================================================

# === App ===
APP_NAME=docsalud-mx
APP_ENV=development
APP_DEBUG=true
APP_PORT=8000
APP_HOST=0.0.0.0
SECRET_KEY=your-secret-key-here-change-in-production
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# === Database (PostgreSQL) ===
DATABASE_URL=postgresql+asyncpg://docsalud:password@localhost:5432/docsalud_db
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
POSTGRES_USER=docsalud
POSTGRES_PASSWORD=password
POSTGRES_DB=docsalud_db

# === Supabase (Vector Store) ===
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-key

# === Redis ===
REDIS_URL=redis://localhost:6379/0

# === OpenAI ===
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4-turbo
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# === Anthropic ===
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# === Tesseract ===
TESSERACT_CMD=/usr/bin/tesseract
TESSERACT_LANG=spa

# === AWS (Production) ===
AWS_ACCESS_KEY_ID=your-aws-key
AWS_SECRET_ACCESS_KEY=your-aws-secret
AWS_REGION=us-east-1
AWS_S3_BUCKET=docsalud-mx-documents

# === Logging ===
LOG_LEVEL=DEBUG
LOG_FORMAT=json

# === ML Models ===
MODEL_PATH=./models
NER_MODEL_PATH=./models/ner_medical
CLASSIFIER_MODEL_PATH=./models/document_classifier
ANOMALY_MODEL_PATH=./models/anomaly_detector

# === Groq (LLM gratuito — recomendado para MVP) ===
GROQ_API_KEY=gsk_your-groq-api-key
GROQ_MODEL=llama-3.3-70b-versatile
GROQ_MAX_TOKENS=2000
GROQ_TEMPERATURE=0.1

# === Embeddings ===
USE_LOCAL_EMBEDDINGS=true
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# === Feature Flags ===
ENABLE_RAG=true
ENABLE_ML_CLASSIFICATION=true
LOAD_ML_MODELS=false
